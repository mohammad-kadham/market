<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/style.css">

</head>
<body>
  <%-include('_navigation')%>
    
  <div class="container">
    <div class="product-grid">
      <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
          <div class="product-card">
            <h2 class="product-title"><%= product.productName %></h2>
            <p class="product-price">$<%= product.price %></p>
            <p class="product-description"><%= product.productDes %></p>
            
            <img src="<%= product.image %>" width="200px"  alt="">
            <a href="/products/<%= product.id %>" class="btn btn-view">View Details</a>
          </div>
        <% }); %>
      <% } else { %>
        <p class="no-products">No products available at this time.</p>
      <% } %>
    </div>
  </div>
    
    <!-- <script src="/js/main.js"></script> -->
  </body>
</html>